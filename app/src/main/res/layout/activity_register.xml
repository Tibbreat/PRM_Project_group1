<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="91dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="login"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/edt_regis_phone"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/stat_sys_speakerphone"
        android:drawablePadding="6dp"
        android:drawableTint="#BFBFBF"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="number"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_name" />

    <TextView
        android:id="@+id/err_regis_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_phone"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_phone"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_phone" />

    <EditText
        android:id="@+id/edt_regis_re_password"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="5dp"
        android:drawableTint="#D4D4D4"
        android:ems="10"
        android:hint="Enter password again"
        android:inputType="text|textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_password"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_password" />

    <TextView
        android:id="@+id/err_regis_re_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_re_password"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_re_password"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_re_password" />

    <TextView
        android:id="@+id/err_email4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_email"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_email"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_email" />

    <EditText
        android:id="@+id/edt_regis_address"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_phone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_phone"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_phone" />

    <TextView
        android:id="@+id/err_regis_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_address"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_address"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_address" />

    <EditText
        android:id="@+id/edt_regis_name"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/err_regis_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_name"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_name"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_regis_email"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_address"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_address" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_regis_password"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn"
        android:layout_width="122dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="Sign in"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_re_password"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_re_password"
        app:layout_constraintTop_toBottomOf="@+id/edt_regis_re_password" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Already have an account ?"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/register_btn"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/register_btn"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

    <TextView
        android:id="@+id/err_regis_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_email"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_email"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_email" />

    <TextView
        android:id="@+id/err_regis_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_regis_password"
        app:layout_constraintEnd_toEndOf="@+id/edt_regis_password"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="@+id/edt_regis_password" />

</androidx.constraintlayout.widget.ConstraintLayout>