<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    tools:context=".ForgotActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="91dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="login"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <EditText
        android:id="@+id/edt_forgot_address"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:drawablePadding="6dp"
        android:drawableTint="#BFBFBF"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_forgot_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_forgot_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_forgot_email" />

    <TextView
        android:id="@+id/err_forgot_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_forgot_address"
        app:layout_constraintEnd_toEndOf="@+id/edt_forgot_address"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/edt_forgot_address" />


    <EditText
        android:id="@+id/edt_forgot_email"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/err_forgot_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_forgot_email"
        app:layout_constraintEnd_toEndOf="@+id/edt_forgot_email"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/edt_forgot_email" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Forgot Password"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changes_btn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="Changes Password"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/edt_forgot_address"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/edt_forgot_address"
        app:layout_constraintTop_toBottomOf="@+id/edt_forgot_address" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="Back to login ?"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/changes_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changes_btn"
        app:layout_constraintTop_toBottomOf="@+id/changes_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>